<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/robot"
            android:contentDescription="ASCII icon"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_ascii_pregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué letra corresponde al código ASCII 65?"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/et_respuesta"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Escribe la letra"
            android:textSize="18sp"
            android:gravity="center"
            android:inputType="textCapCharacters"
            android:maxLength="1"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_verificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verificar"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente código" />
    </LinearLayout>
</ScrollView>
